<div class="container">

	<div class="row">
		<p>Welcome! <%= @current_user.name %>さん!</p>
	</div>

	<div class="row">
		<h3>タグリスト</h3>
			<% @tag_list.each do |list| %>
				<%= link_to tag_posts_path(tag_id: list.id) do %>
					<%= list.tag_name %>(<%= list.posts.count %>)
				<% end %>
			<% end %>


		<h3>新規投稿</h3>
			<%= form_with(model: Post.new, url: posts_path, local: true) do |f| %>
				<%= f.text_area :content %>
				<br>
				<p>スペースを入力することで複数のタグをつけることが出来ます。</p>
				<P>例：音楽 文芸 スポーツ</P>
				<%= f.text_field :tag_name %>
				<%= f.submit '投稿', class: "btn btn-primary" %>
			<% end %>

		<h3>投稿一覧</h3>

			<% @posts.each do |post| %>
				<%= link_to post.content, post_path(post.id) %>
			<% end %>

	</div>

</div>
