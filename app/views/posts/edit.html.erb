<div class="container">
	<div class="row">

		<h3>投稿編集</h3>
			<%= form_with(model: @post, url: posts_path, method: :destroy, local: true) do |f| %>
				<%= f.text_area :content %>
				<br>
				<p>スペースを入力することで複数のタグをつけることが出来ます。</p>
				<P>例：音楽 文芸 スポーツ</P>
				<%= f.text_field :tag_name %>
				<%= f.submit '編集', class: "btn btn-primary" %>
			<% end %>

	</div>
</div>