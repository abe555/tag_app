<div class="container">
	<div class="row">
		<h2>投稿一覧</h2>

		<% @tag_list.each do |list| %>
			<%= link_to list.tag_name, tag_posts_path(post_tag_id: list.id) %>

		<% end %>

		</br>
		<span>タグが - </span><%= @tag.tag_name %><span> - の投稿一覧</span>
		</br>
		<% @posts.each do |post| %>

			<%= link_to post.content, post_path(post.id) %>
		</br>
		<% end %>

	</div>

	<div class="row">
		<%= link_to 'ホーム', root_path %>
	</div>

</div>